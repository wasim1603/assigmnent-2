C Program to sort an array in descending order.

#include <stdio.h>
void main()
{
int n, temp;
printf("Enter the value of N: ");
scanf("%d", &n);
int arr[n];
printf("Enter the numbers:\n");
for(int i=0; i<n; i++)
scanf("%d", &arr[i]);
for(int i=0; i<n; i++)
{
for(int j=i+1; j<n; j++)
{
if(arr[i] < arr[j])
{
temp = arr[i];
arr[i] = arr[j];
arr[j] = temp;
}
}
}
printf("The numbers arranged in descending order are given below:\n");
for(int i=0; i<n; i++)
printf("%d\n", arr[i]);
}
